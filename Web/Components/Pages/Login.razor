@page "/login"
@using Application.DTOs
@using Application.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@using Web.Services @* <--- Be kell húzni a mappát, ahol a Provider és a Storage van *@
@inject NavigationManager Navigation
@inject LocalStorageService localStorage 
@* <--- Injektáljuk a raktárost *@
@inject AuthenticationStateProvider AuthProvider 
@* <--- Injektáljuk a határőrt *@
@rendermode InteractiveServer

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Bejelentkezés</h2>

        <EditForm FormName="LoginForm" Model="@loginDto" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="input-group">
                <label>Email vagy Felhasználónév</label>
                <InputText @bind-Value="loginDto.EmailOrUserName" placeholder="Add meg az azonosítót" />
                <div class="error-msg">
                    <ValidationMessage For="@(() => loginDto.EmailOrUserName)" />
                </div>
            </div>

            <div class="input-group">
                <label>Jelszó</label>
                <InputText @bind-Value="loginDto.Password" type="password" placeholder="******" />
                <div class="error-msg">
                    <ValidationMessage For="@(() => loginDto.Password)" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="server-error">@errorMessage</div>
            }

            <div class="actions">
                <button type="submit" disabled="@isSubmitting">
                    @(isSubmitting ? "Folyamatban..." : "Belépés")
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LoginDto loginDto = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    [Inject] private IAuthService AuthService { get; set; } = null!;

    private async Task HandleLogin()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var user = await AuthService.LoginAsync(loginDto.EmailOrUserName, loginDto.Password);

            if (user != null)
            {
                // 1. ELMENTJÜK a nevet a böngészőbe (hogy F5 után is ott legyen)
                // Figyelj: a CustomAuthStateProvider-ben stringet várunk (userName)!
                await localStorage.SetItemAsync("currentUser", user.UserName);

                // 2. SZÓLUNK az AuthenticationStateProvider-nek, hogy frissítse az UI-t
                // Itt típuskényszerítést (cast) kell használnunk a saját osztályunkra
                var customAuth = (CustomAuthStateProvider)AuthProvider;
                customAuth.NotifyUserLogin(user.UserName);

                // 3. MEHETÜNK a főoldalra
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "Hibás adatok.";
            }
        }
        catch (Exception ex)
        {
            // Így már nem fog panaszkodni, és látsz is valamit a Debug Output-ban
            Console.WriteLine($"Hiba a bejelentkezés során: {ex.Message}");
            errorMessage = "Hálózati hiba történt.";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}